{
  "name": "solcasteran",
  "version": "0.0.1",
  "description": "Sol Casteran WebPage",
  "main": "src/index.html",
  "author": "Bruno Chiappetta",
  "bugs": {
    "url": "https://github.com/BrunoChiappetta/solcasteran/issues"
  },
  "homepage": "https://github.com/BrunoChiappetta/solcasteran#readme",
  "scripts": {
    "build:sass": "sass  --no-source-map src/scss:build/css",
    "copy:html": "copyfiles -u 1 \"src/*.html\" public",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:js": "copyfiles -u 1 \"src/javascript/**\" public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
    "watch:js": "onchange \"src/javascript/**\" -- npm run copy:js",
    "watch:sass": "sass  --no-source-map --watch src/scss:public/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss build/css/*.css -u autoprefixer cssnano -r --no-map",
    "dev": "nodemon server.js",
    "startsever": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrunoChiappetta/solcasteran.git"
  },
  "keywords": [
    "Pagina",
    "Web",
    "Fotografa"
  ],
  "dependencies": {
    "@fancyapps/ui": "^5.0.33",
    "autoprefixer": "^10.4.2",
    "body-parser": "^1.20.2",
    "browser-sync": "^3.0.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "express": "^4.18.2",
    "nodemailer": "^6.9.8",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.69.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
